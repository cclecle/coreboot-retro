if BOARD_SHUTTLE_AB61 || BOARD_SHUTTLE_HOT_661 || BOARD_SHUTTLE_HOT_649

config BASE_SHUTTLE_HOT_649
	def_bool n
	select SDRAMPWR_4DIMM
	select HAVE_MP_TABLE

config BOARD_SPECIFIC_OPTIONS
	def_bool y
	select ACPI_NO_CUSTOM_MADT
	select CPU_INTEL_SLOT_1
	select NORTHBRIDGE_INTEL_I440BX
	select SOUTHBRIDGE_INTEL_I82371EB
	select SUPERIO_WINBOND_W83977TF
	select HAVE_PIRQ_TABLE
	select HAVE_OPTION_TABLE
	select BOARD_ROMSIZE_KB_256
	select USE_OPTION_TABLE
	select SDRAMPWR_4DIMM if BOARD_SHUTTLE_HOT_661 || BOARD_SHUTTLE_HOT_649
	select HAVE_ACPI_TABLES if BOARD_SHUTTLE_AB61 || BOARD_SHUTTLE_HOT_661
	select BASE_SHUTTLE_HOT_649 if BOARD_SHUTTLE_HOT_649

config MAX_CPUS
	int
	default 2 if BASE_SHUTTLE_HOT_649

config MAINBOARD_DIR
	default "shuttle/ab61"

config MAINBOARD_PART_NUMBER
	default "AB61" if BOARD_SHUTTLE_AB61
	default "HOT_661" if BOARD_SHUTTLE_HOT_661
	default "HOT_649" if BOARD_SHUTTLE_HOT_649

config VARIANT_DIR
	default "ab61" if BOARD_SHUTTLE_AB61
	default "hot-661" if BOARD_SHUTTLE_HOT_661
	default "hot-649" if BOARD_SHUTTLE_HOT_649

config OVERRIDE_DEVICETREE
	default "variants/\$(CONFIG_VARIANT_DIR)/overridetree.cb"

config IRQ_SLOT_COUNT
	int
	default 7 if BOARD_SHUTTLE_AB61
	default 6

config PAYLOAD_CONFIGFILE
	string
	default "\$(top)/src/mainboard/\$(MAINBOARDDIR)/config_seabios" if PAYLOAD_SEABIOS

config SEABIOS_BOOTORDER_FILE
	string
	default "\$(top)/src/mainboard/\$(MAINBOARDDIR)/bootorder" if PAYLOAD_SEABIOS

endif
