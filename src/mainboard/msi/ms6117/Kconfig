if BOARD_MSI_MS6117

config BOARD_MSI_MS6117
	def_bool n

config ROM_SIZE_TINY
	def_bool n
	select BOARD_ROMSIZE_KB_128

config ROM_SIZE_NORMAL
	def_bool n
	select BOARD_ROMSIZE_KB_256

config BOARD_SPECIFIC_OPTIONS
	def_bool y
	select ACPI_NO_CUSTOM_MADT
	select CPU_INTEL_SLOT_1
	select NORTHBRIDGE_INTEL_I440LX
	select SOUTHBRIDGE_INTEL_I82371EB
	select SUPERIO_WINBOND_W83977TF
	select HAVE_PIRQ_TABLE
	select ROM_SIZE_NORMAL if BOARD_MSI_MS6117
	select HAVE_OPTION_TABLE
	select USE_OPTION_TABLE
	select HAVE_ACPI_TABLES if BOARD_MSI_MS6117

config MAX_CPUS
	int

if BOARD_MSI_MS6117

config MAINBOARD_DIR
	default "msi/ms6117"

config MAINBOARD_PART_NUMBER
	default "MSI LX6 (MS-6117)" if BOARD_MSI_MS6117

config MAINBOARD_VENDOR
	default "Micro-Star International Co., Ltd."

config MAINBOARD_FAMILY
	default "Default string"

config IRQ_SLOT_COUNT
	int
	default 7 if BOARD_MSI_MS6117

endif
